package com.yourcompany.bmo.model;

import java.math.*;

import javax.persistence.*;

import org.openxava.annotations.*;

import lombok.*;
@Entity @Getter @Setter
public class Parier {
	@Id
	@Money
	BigDecimal montantDuPari; 
	
	@ManyToOne( // The reference is persisted as a database relationship
			fetch=FetchType.LAZY, // The reference is loaded on demand
	        optional=true) // The reference can have no value
	@DescriptionsList
    Evenements sports; // A regular Java reference
	
	@Embedded
	Basket basket;
	
	
	
	@Embedded
	PariSimple pariSimpleFoot;
	
	@Embedded
	PariAvanceFoot pariAvancésFoot;
	
	@Embedded
	PariSimple pariSimpleTennis;
	
	@Embedded
	PariAvanceTennis pariAvancésTennis;
	
	@Embedded
	Course coursesDeChevaux;
}
